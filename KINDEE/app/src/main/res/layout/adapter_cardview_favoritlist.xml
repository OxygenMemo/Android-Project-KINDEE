<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp">
    <android.support.v7.widget.CardView

        card_view:cardBackgroundColor="@color/colorpink"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view_favoritelist_apadter"

        android:layout_width="match_parent"
        android:layout_height="120dp"
        card_view:cardCornerRadius="20dp">

        <LinearLayout
            android:padding="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/Res_img_favoritelist_apadter"
                android:layout_width="100dp"
                android:layout_height="100dp"/>
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:text="gg"
                    android:textSize="20dp"
                    android:id="@+id/Res_name_favoritelist_apadter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="sssg"
                    android:textSize="20dp"
                    android:id="@+id/Type_name_favoritelist_apadter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>


    </android.support.v7.widget.CardView>
</LinearLayout>
